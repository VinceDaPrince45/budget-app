<h1><strong>Category: <%= category.name %></strong></h1>

<% if (category_expenses.length > 0) { %>
  <p><strong>Delete the following expenses before attempting to delete this category.</strong></p>
  <div style="margin-left:20px;margin-top:20px">
    <h4>Expenses:</h4>
    <dl>
      <% category_expenses.forEach(function(expense) { %>
        <dt>
            <a href="<%= expense.url %>"><%= expense.item_name %></a>
            <p>$<%= expense.price %></p>
        </dt>
      <% }); %>
    </dl>
  </div>
<% } else { %>
  <p>Do you really want to delete this category?</p>

  <form method="POST">
    <div class="form-group">
      <input id="category_id" class="form-control" type="hidden" name="category_id" value="<%= category._id %>">
    </div>
    <button class="btn btn-primary" type="submit">Delete</button>
  </form>
<% } %>