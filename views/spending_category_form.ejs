<h1><strong><%= title %></strong></h1>

<form method="POST">
    <div class="form-group">
        <label for="name">Category name:</label>
        <input id="name" class="form-control" type="text" placeholder="Entertainment, Food etc." name="name" required value="<%= category ? category.name : '' %>">
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</form>

<% if (errors) { %>
    <ul>
        <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
        <% }); %>
    </ul>
<% } %>